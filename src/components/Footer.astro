---
import SignUpBottom from './SignUpBottom.astro';
type Props = {
	hideSignUp?: boolean;
};

const {hideSignUp} = Astro.props;
---

<footer
	class="mt-4 flex flex-col items-center border-t border-primary-main pt-4 text-sm leading-[1.75]"
>
	{!hideSignUp && <SignUpBottom />}
	<div class="mt-4 pb-4">
		This blog is built by
		<a
			class="unset gradient-link bg-gradient-to-r from-[#f57111] to-[#f79605] bg-clip-text font-bold tracking-wider text-transparent hover:after:bg-gradient-to-r hover:after:from-[#f57111] hover:after:to-[#f79605]"
			href={'https:mattm9y.com'}
			target="_blank"
		>
			Matt M9y</a
		>.
	</div>
</footer>

<style>
	footer {
		grid-area: footer;
	}
	.gradient-link {
		position: relative;
		box-decoration-break: clone;
		text-decoration: none;
	}

	.gradient-link:hover:after {
		transform: translateZ(0) scale(1);
	}

	.gradient-link:after {
		left: 0;
		right: 0;
		bottom: -2px;
		content: '';
		height: 2px;
		position: absolute;
		transform: translateZ(0) scaleX(0);
		transform-origin: left center;
		transition: all 0.15s ease-in-out;
	}
</style>
