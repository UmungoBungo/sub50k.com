---
import HeaderLink from "./HeaderLink.astro";
import DarkModeToggle from "./DarkModeToggle.astro";
---

<header>
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <nav>
    <section class="text-text-bold">
      <ul class="unset flex gap-4 [&>li]:p-0">
        <li>
          <HeaderLink href="/" aria-label="home">
            <img
              alt="Sub50k logo"
              class="h-6 w-6 grayscale hover:grayscale-0"
              src="https://res.cloudinary.com/sub50k/image/upload/f_auto,q_auto:low/v1677465040/site/50kLogo.png"
            />
          </HeaderLink>
        </li>
      </ul>
    </section>
  </nav>
  <div
    class="max-[375px]:hidden justify-self-end py-2 flex items-center content-center text-text-bold"
  >
    <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="https://github.com/UmungoBungo/sub50k.com"
    >
      <i class="fa-brands fa-github" aria-hidden="true" title="Sub50k on GitHub"
      ></i>
      <span class="fa-sr-only">sub50k on GitHub</span>
    </a>
  </div>
  <DarkModeToggle />
</header>
<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(
        0,
        max-content
      );
  }
</style>
