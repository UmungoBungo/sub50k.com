---
import HeaderLink from './HeaderLink.astro';
import DarkModeToggle from './DarkModeToggle.astro';
---

<header>
	<a
		class="unset absolute left-[50%] -top-[100rem] z-10 translate-x-[-50%] bg-white px-8 py-2 text-black focus:top-[initial]"
		href="#main"
	>
		Skip to content
	</a>
	<nav>
		<section class="text-text-bold">
			<ul class="unset flex gap-4 [&>li]:p-0">
				<li>
					<HeaderLink href="/" aria-label="home">
						<img
							alt="Sub50k logo"
							class="h-6 w-6 grayscale hover:grayscale-0"
							src="https://res.cloudinary.com/sub50k/image/upload/f_auto,q_auto:low/v1677465040/site/50kLogo.png"
						/>
					</HeaderLink>
				</li>
				<li>
					<HeaderLink href="blog" aria-label="home">Posts</HeaderLink>
				</li>
			</ul>
		</section>
	</nav>
	<div
		class="flex content-center items-center justify-self-end py-2 text-text-bold max-[375px]:hidden"
	>
		<a
			class="unset ml-4 text-xl hover:text-text-link"
			href="https://github.com/UmungoBungo/sub50k.com"
		>
			<i class="fa-brands fa-github" aria-hidden="true" title="Sub50k on GitHub"
			></i>
			<span class="fa-sr-only">sub50k on GitHub</span>
		</a>
	</div>
	<DarkModeToggle />
</header>
<style>
	header {
		grid-area: header;
		display: grid;
		align-items: center;
		grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(
				0,
				max-content
			);
	}
</style>
